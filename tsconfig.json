{
  "compilerOptions": {
    "outDir": "./dist", // Los archivos compilados irán al directorio "dist"
    "rootDir": "./src", // Tu código fuente está en "src"
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
